{
  "name": "card-game",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run watch:css\" \"node server.js\"",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/style.css --minify",
    "watch:css": "tailwindcss -i ./public/css/input.css -o ./public/css/style.css --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "daisyui": "^4.4.24",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}